#!/bin/bash

echo "================================================================================"

if [ ! -n "$YGGDRASH_HOME" ]
then
    echo "You must set the enviroment YGGDRASH_HOME"
    echo "$YGGDRASH_HOME"
    echo
    echo "ex)"
    echo "You can set the YGGDRASH_HOME at ~/.bash_profile"
    echo "export YGGDRASH_HOME=$HOME/IdeaProjects/yggdrash"
    echo
    echo "$ source .bash_profile"
    echo "$ ./yggdrash start"
    echo

    exit 0
fi

HOME=$YGGDRASH_HOME
BIN=$HOME/bin
PID=$HOME/bin/yggdrash.pid
LOG=$HOME/logs/yggdrash.log
ERROR=$HOME/logs/error.log

CMD="yggdrash-node.jar"
COMMAND="$BIN/$CMD"
JARFILE="$YGGDRASH_HOME/yggdrash-node/build/libs/yggdrash-node.jar"

status() {
    echo "YGGDARSH Status"

    if [ -f $PID ]
    then
        echo "Pid file: $( cat $PID ) [$PID]"
        ps -ef | grep -v grep | grep $( cat $PID ) | grep "java"
    else
        echo "YGGDRASH node is not started."
    fi
}

build() {
    echo "Compiling JAR:$JARFILE"
    cd $YGGDRASH_HOME
    echo $PWD
    ./gradlew -PspringProfiles=prod clean build
    cd $BIN
}


start() {
    if [ ! -f $JARFILE ]
    then
        build
    fi

    if [ -f $PID ]
    then
        echo "Already started. PID: [$( cat $PID )]"
    else
        echo "YGGDRASH Start"
        touch $PID
        if nohup $COMMAND >>$LOG 2>&1 &
        then
            sleep 3
            LIST=`ps -ef | grep -v grep | grep $CMD | grep -w $USER | grep $! | awk '{print $2}'`
            echo $LIST > $PID
            echo $LIST
            echo "Started the YGGDRASH node."
            echo "Success!"
            echo "PID: $(cat $PID)"
            echo "$(date '+%Y-%m-%d %X'): START" >>$LOG
            echo "LOG: $LOG"
        else echo "Error... "
            /bin/rm $PID
        fi
    fi
}

kill_cmd() {
    SIGNAL=""; MSG="Killing "
    while true
    do
        LIST=`ps -ef | grep -v grep | grep $CMD | grep -w $USER | awk '{print $2}'`
        if [ "$LIST" ]
        then
            echo $LIST | xargs kill $SIGNAL
            echo "LIST"
            echo $LIST
            sleep 2
            SIGNAL="-9" ; MSG="Killing $SIGNAL"
            if [ -f $PID ]
            then
                /bin/rm $PID
            fi
        else
           echo "All stopped...";
           break
        fi
    done
}

stop() {
    echo "YGGDRASH Stop"

    if [ -f $PID ]
    then
        if kill $( cat $PID )
        then echo "Stopping the YGGDRASH node."
             echo "$(date '+%Y-%m-%d %X'): STOP" >>$LOG
        fi
        /bin/rm $PID
        sleep 1
        kill_cmd
    else
        echo "No pid file. Already stopped?"
    fi
}

log() {
    tail -f $LOG
}

help() {

    echo "YGGDRASH node"
    echo "Usage: $0 start | stop | restart | status | log | build | help"
}

case "$1" in
    'start')
            start
            ;;
    'stop')
            stop
            ;;
    'restart')
            stop ; echo; sleep 1 ;
            start
            ;;
    'status')
            status
            ;;
    'log')
            log
            ;;
    'build')
            build
            ;;
    *)
            help
            ;;
esac

echo "================================================================================"

exit 0
